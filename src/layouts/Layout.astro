---
interface Props {
  lang?: 'es' | 'en';
  title?: string;
  description?: string;
  ogImage?: string;
}

const {
  lang = 'es',
  title: propTitle,
  description: propDescription,
  ogImage: propOgImage,
} = Astro.props;

const title = propTitle || 'Álvaro Lostal - Portafolio';
const description =
  propDescription ||
  'Portafolio profesional de Álvaro Lostal, desarrollador frontend e ingeniero informático.';
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const defaultOgImage = new URL('/assets/og/azulejos.jpg', Astro.site).href;
const ogImage = propOgImage || defaultOgImage;
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="format-detection" content="telephone=no" />

    <!-- Seguridad y rendimiento -->
    <meta http-equiv="X-Content-Type-Options" content="nosniff" />
    <meta http-equiv="X-XSS-Protection" content="1; mode=block" />
    <meta name="referrer" content="strict-origin-when-cross-origin" />

    <!-- DNS Prefetch para recursos externos -->
    <link rel="dns-prefetch" href="//fonts.googleapis.com" />
    <link rel="dns-prefetch" href="//fonts.gstatic.com" />
    <link rel="dns-prefetch" href="//cdnjs.cloudflare.com" />
    <link rel="dns-prefetch" href="//www.googletagmanager.com" />

    <!-- Google Analytics 4 - Optimizado para rendimiento -->
    <link rel="preconnect" href="https://www.googletagmanager.com" />
    <script
      is:inline
      type="text/partytown"
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-0Q34SCCETB"></script>
    <script is:inline type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());
      gtag('config', 'G-0Q34SCCETB', {
        send_page_view: true,
        anonymize_ip: true,
      });
    </script>

    <!-- Preload Geist fonts (WOFF2) -->
    <link
      rel="preload"
      href="/assets/geist/Geist-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/assets/geist/Geist-SemiBold.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL.href} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:locale" content={lang === 'es' ? 'es_ES' : 'en_US'} />
    <meta property="og:site_name" content="Álvaro Lostal - Portafolio" />

    <!-- Font Awesome Subset -->
    <link
      rel="preload"
      href="/assets/fontawesome/fa-subset.css"
      as="style"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript>
      <link rel="stylesheet" href="/assets/fontawesome/fa-subset.css" />
    </noscript>

    <!-- Inline theme setter (very small) -->
    <script is:inline>
      try {
        const prefersDark =
          window.matchMedia &&
          window.matchMedia('(prefers-color-scheme: dark)').matches;
        document.documentElement.setAttribute(
          'data-theme',
          prefersDark ? 'dark' : 'light'
        );
      } catch (e) {
        // no-op
      }
    </script>
    <!-- Favicons: configuración equilibrada y común en sitios de portafolio -->
    <!-- Raíz .ico (soporte legacy y fallback) -->
    <link rel="icon" href="/favicon.ico" />
    <!-- SVG fuente (alta calidad, navegadores que lo soportan) -->
    <link rel="icon" type="image/svg+xml" href="/assets/favicons/favicon.svg" />
    <!-- PNGs para navegadores/servicios que prefieren bitmap, tamaños comunes -->
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/assets/favicons/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/assets/favicons/favicon-16x16.png"
    />
    <!-- iOS touch icon -->
    <link rel="apple-touch-icon" href="/assets/favicons/apple-touch-icon.png" />
    <meta name="theme-color" content="#ffffff" />
  </head>
  <body>
    <a href="#main" class="skip-link"
      >{
        lang === 'es' ? 'Saltar al contenido principal' : 'Skip to main content'
      }</a
    >

    <!-- Elemento para notificaciones relacionadas con el tema (controlado por theme.js) -->
    <div id="theme-notification" class="theme-notification" aria-hidden="true">
    </div>
    <slot />

    <script src="../scripts/animations.ts"></script>
    <script src="../scripts/auto-scroll.ts"></script>
    <script src="../scripts/navigation.ts"></script>
    <script src="../scripts/theme.ts"></script>

    <style is:global>
      @import '../styles/variables.css';
      @import '../styles/global.css';
      @import '../styles/font-optimization.css';
      @import '../styles/navigation.css';
      @import '../styles/hero.css';
      @import '../styles/sections.css';
      @import '../styles/components.css';
      @import '../styles/floating-contact.css';
      @import '../styles/projects-carousel.css';
    </style>
  </body>
</html>
