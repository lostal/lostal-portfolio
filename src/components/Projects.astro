---
import { Picture } from 'astro:assets';
import vivenzaImg from '../assets/projects/vivenza-preview.png';
import creativeHandsImg from '../assets/projects/creative-hands-preview.png';
import parkingImg from '../assets/projects/gruposiete-parking.png';
import { useTranslations } from '../i18n/utils';

interface Props {
  lang: 'es' | 'en';
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section class="projects-section section-alt" id="projects">
  <div class="wrapper">
    <div class="section-header fade-in">
      <div class="section-label">{t('projects.label')}</div>
      <h2 class="section-title">{t('projects.title')}</h2>
      <p class="section-description">
        {t('projects.description')}
      </p>
    </div>
  </div>

  <div class="projects-section__content">
    <div class="projects-carousel">
      <div class="projects-carousel__nav slider-nav">
        <button
          class="slider-nav__item slider-nav__item_prev"
          aria-label={t('projects.prev')}
          type="button"
        >
          <i class="fas fa-chevron-left" aria-hidden="true"></i>
        </button>
        <button
          class="slider-nav__item slider-nav__item_next"
          aria-label={t('projects.next')}
          type="button"
        >
          <i class="fas fa-chevron-right" aria-hidden="true"></i>
        </button>
      </div>

      <div class="projects-carousel__slider swiper">
        <div class="projects-carousel__wrapper swiper-wrapper">
          <div class="projects-carousel__slide swiper-slide">
            <div class="carousel-item">
              <Picture
                src={parkingImg}
                alt="Vivenza Parking"
                widths={[285, 400, 800]}
                sizes="(max-width: 768px) 285px, (max-width: 1024px) 400px, 500px"
                formats={['avif', 'webp']}
                loading="lazy"
                quality={80}
                class="carousel-item__image"
              />

              <div class="carousel-item__content">
                <div class="carousel-item__header">
                  <div class="carousel-item__header-inner">
                    <div class="carousel-item__price">
                      <div class="carousel-item__tech modal-tags">
                        <span class="tag">
                          <img
                            src="/assets/tech-icons/nextjs.svg"
                            alt="Next.js"
                            class="tech-mini-icon"
                            loading="lazy"
                          />
                          Next.js
                        </span>
                        <span class="tag">
                          <img
                            src="/assets/tech-icons/typescript.svg"
                            alt="TypeScript"
                            class="tech-mini-icon"
                            loading="lazy"
                          />
                          TypeScript
                        </span>
                        <span class="tag">
                          <img
                            src="/assets/tech-icons/mongodb.svg"
                            alt="MongoDB"
                            class="tech-mini-icon"
                            loading="lazy"
                          />
                          MongoDB
                        </span>
                        <span class="tag">
                          <img
                            src="/assets/tech-icons/tailwind.svg"
                            alt="Tailwind CSS"
                            class="tech-mini-icon"
                            loading="lazy"
                          />
                          Tailwind CSS
                        </span>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="carousel-item__info">
                  <h2 class="carousel-item__title">
                    {t('projects.parking.title')}
                  </h2>
                  <div class="carousel-item__text">
                    {t('projects.parking.description')}
                  </div>
                </div>

                <div class="carousel-item__footer">
                  <div class="carousel-item__actions">
                    <a
                      class="carousel-item__action"
                      href="https://gruposiete-parking.vercel.app/"
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      <i class="fas fa-external-link-alt" aria-hidden="true"
                      ></i>
                      <span>{t('projects.parking.preview')}</span>
                    </a>
                    <a
                      class="carousel-item__action"
                      href="https://github.com/lostal/gruposiete-parking"
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      <i class="fab fa-github" aria-hidden="true"></i>
                      <span>GitHub</span>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="projects-carousel__slide swiper-slide">
            <div class="carousel-item">
              <Picture
                src={creativeHandsImg}
                alt="Creative Hands"
                widths={[285, 400, 800]}
                sizes="(max-width: 768px) 285px, (max-width: 1024px) 400px, 500px"
                formats={['avif', 'webp']}
                loading="lazy"
                quality={80}
                class="carousel-item__image"
              />

              <div class="carousel-item__content">
                <div class="carousel-item__header">
                  <div class="carousel-item__header-inner">
                    <div class="carousel-item__price">
                      <div class="carousel-item__tech modal-tags">
                        <span class="tag">
                          <img
                            src="/assets/tech-icons/react.svg"
                            alt="React"
                            class="tech-mini-icon"
                            loading="lazy"
                          />
                          React
                        </span>
                        <span class="tag">
                          <img
                            src="/assets/tech-icons/nodejs.svg"
                            alt="Node.js"
                            class="tech-mini-icon"
                            loading="lazy"
                          />
                          Node.js
                        </span>
                        <span class="tag">
                          <img
                            src="/assets/tech-icons/mongodb.svg"
                            alt="MongoDB"
                            class="tech-mini-icon"
                            loading="lazy"
                          />
                          MongoDB
                        </span>
                        <span class="tag">
                          <img
                            src="/assets/tech-icons/tailwind.svg"
                            alt="Tailwind"
                            class="tech-mini-icon"
                            loading="lazy"
                          />
                          Tailwind
                        </span>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="carousel-item__info">
                  <h2 class="carousel-item__title">
                    {t('projects.creative.title')}
                  </h2>
                  <div class="carousel-item__text">
                    {t('projects.creative.description')}
                  </div>
                </div>

                <div class="carousel-item__footer">
                  <div class="carousel-item__actions">
                    <a
                      class="carousel-item__action"
                      href="https://creative-hands-cjzg.onrender.com"
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      <i class="fas fa-external-link-alt" aria-hidden="true"
                      ></i>
                      <span>{t('projects.creative.preview')}</span>
                    </a>
                    <a
                      class="carousel-item__action"
                      href="https://github.com/lostal/creative-hands"
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      <i class="fab fa-github" aria-hidden="true"></i>
                      <span>GitHub</span>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="projects-carousel__slide swiper-slide">
            <div class="carousel-item">
              <Picture
                src={vivenzaImg}
                alt="RediseÃ±o Vivenza Expo"
                widths={[285, 400, 800]}
                sizes="(max-width: 768px) 285px, (max-width: 1024px) 400px, 500px"
                formats={['avif', 'webp']}
                loading="lazy"
                quality={80}
                class="carousel-item__image"
              />
              <div class="carousel-item__content">
                <div class="carousel-item__header">
                  <div class="carousel-item__header-inner">
                    <div class="carousel-item__price">
                      <div class="carousel-item__tech modal-tags">
                        <span class="tag">
                          <img
                            src="/assets/tech-icons/html5.svg"
                            alt="HTML5"
                            class="tech-mini-icon"
                            loading="lazy"
                          />
                          HTML5
                        </span>
                        <span class="tag">
                          <img
                            src="/assets/tech-icons/css3.svg"
                            alt="CSS3"
                            class="tech-mini-icon"
                            loading="lazy"
                          />
                          CSS3
                        </span>
                        <span class="tag">
                          <img
                            src="/assets/tech-icons/javascript.svg"
                            alt="JavaScript"
                            class="tech-mini-icon"
                            loading="lazy"
                          />
                          JavaScript
                        </span>
                        <span class="tag">
                          <img
                            src="/assets/tech-icons/nextjs.svg"
                            alt="Next.js"
                            class="tech-mini-icon"
                            loading="lazy"
                          />
                          Next.js
                        </span>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="carousel-item__info">
                  <h2 class="carousel-item__title">
                    {t('projects.vivenza.title')}
                  </h2>
                  <div class="carousel-item__text">
                    {t('projects.vivenza.description')}
                  </div>
                </div>

                <div class="carousel-item__footer">
                  <div class="carousel-item__actions">
                    <a
                      class="carousel-item__action"
                      href="https://vivenza.netlify.app/"
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      <i class="fas fa-external-link-alt" aria-hidden="true"
                      ></i>
                      <span>{t('projects.vivenza.preview')}</span>
                    </a>
                    <a
                      class="carousel-item__action"
                      href="https://github.com/lostal/vivenza-redesign"
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      <i class="fab fa-github" aria-hidden="true"></i>
                      <span>GitHub</span>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import '../lib/projects-carousel.ts';
</script>
