---
import { useTranslations } from '../i18n/utils';

interface Props {
  lang: 'es' | 'en';
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<footer>
  <div class="footer-content">
    <div class="footer-links">
      <a href="#projects" class="footer-link">{t('nav.projects')}</a>
      <a href="#journey" class="footer-link">{t('nav.journey')}</a>
      <a href="#skills" class="footer-link">{t('nav.skills')}</a>
      <a href="#contact" class="footer-link">{t('nav.contact')}</a>
    </div>
    <p class="footer-text">
      © <span id="current-year">2025</span> Álvaro Lostal. <span
        >{t('footer.copyright')}</span
      >
    </p>
  </div>
</footer>

<script>
  // Actualizar el año automáticamente
  document.addEventListener('DOMContentLoaded', () => {
    const yearElement = document.getElementById('current-year');
    if (yearElement) {
      yearElement.textContent = new Date().getFullYear().toString();
    }
  });
</script>
