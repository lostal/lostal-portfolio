---
import { useTranslations } from '../i18n/utils';

interface Props {
  lang: 'es' | 'en';
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section id="journey" class="section-alt">
  <div class="container">
    <div class="section-header fade-in">
      <div class="section-label">{t('journey.label')}</div>
    </div>

    <div class="experience-grid">
      <div class="experience-column" aria-labelledby="exp-title">
        <div class="column-header">
          <h2 id="exp-title" class="column-title">
            {t('journey.experience')}
          </h2>
          <div class="column-divider"></div>
        </div>

        <div class="timeline">
          <article
            class="timeline-item card fade-in"
            aria-roledescription="entry"
          >
            <div class="card-inner">
              <div class="timeline-logo" aria-hidden="true">
                <img
                  src="/assets/logos/eurocastalia.svg"
                  alt="Logo de Eurocastalia, empresa donde realizé prácticas de desarrollo web"
                />
              </div>

              <div class="timeline-body">
                <div class="timeline-header">
                  <h3 class="timeline-title">
                    {t('journey.eurocastalia.title')}
                  </h3>
                  <span class="timeline-date"
                    >{t('journey.eurocastalia.date')}</span
                  >
                </div>
                <div class="timeline-subtitle">
                  {t('journey.eurocastalia.company')}
                </div>
                <p class="timeline-description">
                  {t('journey.eurocastalia.description')}
                </p>
                <ul class="timeline-list">
                  <li>{t('journey.eurocastalia.task1')}</li>
                  <li>{t('journey.eurocastalia.task2')}</li>
                </ul>
              </div>
            </div>
          </article>
        </div>
      </div>

      <div class="experience-column" aria-labelledby="edu-title">
        <div class="column-header">
          <h2 id="edu-title" class="column-title">
            {t('journey.education')}
          </h2>
          <div class="column-divider"></div>
        </div>

        <div class="timeline">
          <article
            class="timeline-item card fade-in"
            aria-roledescription="education"
          >
            <div class="card-inner">
              <div class="timeline-logo" aria-hidden="true">
                <img
                  src="/assets/logos/uea.svg"
                  alt="Logo de la Universidad Europea del Atlántico donde estudio Ingeniería Informática"
                />
              </div>

              <div class="timeline-body">
                <div class="timeline-header">
                  <h3 class="timeline-title">
                    {t('journey.uea.title')}
                  </h3>
                  <span class="timeline-date">{t('journey.uea.date')}</span>
                </div>
                <div class="timeline-subtitle">
                  {t('journey.uea.institution')}
                </div>
                <p class="timeline-description">
                  {t('journey.uea.description')}
                </p>
                <ul class="timeline-list">
                  <li>{t('journey.uea.subject1')}</li>
                  <li>{t('journey.uea.subject2')}</li>
                  <li>{t('journey.uea.subject3')}</li>
                </ul>
              </div>
            </div>
          </article>

          <article
            class="timeline-item card fade-in"
            aria-roledescription="certification"
          >
            <div class="card-inner">
              <div class="timeline-logo" aria-hidden="true">
                <img
                  src="/assets/logos/cambridge.svg"
                  alt="Logo de Cambridge Assessment English donde obtuve mi certificación B2 First"
                />
              </div>

              <div class="timeline-body">
                <div class="timeline-header">
                  <h3 class="timeline-title">
                    {t('journey.cambridge.title')}
                  </h3>
                  <span class="timeline-date">{t('journey.cambridge.date')}</span>
                </div>
                <div class="timeline-subtitle">
                  {t('journey.cambridge.institution')}
                </div>
                <p class="timeline-description">
                  {t('journey.cambridge.description')}
                </p>
              </div>
            </div>
          </article>
        </div>
      </div>
    </div>
  </div>
</section>
